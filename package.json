{
  "name": "piece",
  "productName": "Piece",
  "version": "1.0.0",
  "description": "Less equals more.",
  "author": "Polaris Chen",
  "main": "./app/main.js",
  "scripts": {
    "start": "electron ./app --enable-logging",
    "watch": "./node_modules/.bin/webpack-dev-server",
    "electron-rebuild": "./node_modules/.bin/electron-rebuild",
    "build-osx": "electron-packager . Piece --overwrite --prune --platform=darwin --arch=x64 --version=0.37.8 --icon=app/img/app-icon.icns",
    "postinstall": "install-app-deps",
    "dev": "NODE_ENV='development' npm run start",
    "dist": "npm run dist:osx && npm run dist:win32 && npm run dist:win64",
    "dist:osx": "build --osx",
    "dist:win32": "build --platform win32 --arch ia32",
    "dist:win64": "build --platform win32 --arch x64",

    "clean": "rm -rf ./dist",
    "clean:osx": "rm -rf ./dist/osx",
    "clean:win": "rm -rf ./dist/win",

    "pack": "npm run clean && npm run pack:osx && npm run pack:win",
    "pack:osx": "npm run clean:osx && electron-packager . \"Piece\" --out=dist/osx --platform=darwin --arch=x64 --version=0.37.8 --icon=app/img/app-icon.icns --ignore=dist --ignore=assets --ignore=builder.json --ignore=bower.json --ignore=README.md --ignore=.gitignore --ignore=preview.png",
    "pack:win": "npm run clean:win && electron-packager . \"Piece\" --out=dist/win --platform=win32 --arch=ia32 --version=0.37.8 --icon=assets/win/logo.ico --ignore=dist --ignore=assets --ignore=builder.json --ignore=bower.json --ignore=README.md --ignore=.gitignore --ignore=preview.png",

    "build": "npm run build:osx && npm run build:win",
    "build:osx": "build \"dist/osx/Piece-darwin-x64/Piece.app\" --osx",
    "build:win": "npm run pack:win && electron-builder \"dist/win/Piece-win32-ia32\" --platform=win --out=\"dist/win\" --config=builder.json"
  },
  "devDependencies": {
    "babel-core": "^6.7.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "css-loader": "^0.23.1",
    "electron-builder": "^4.2.2",
    "electron-packager": "^7.0.3",
    "electron-rebuild": "^1.1.3",
    "file-loader": "^0.8.5",
    "json-loader": "^0.5.4",
    "less": "^2.6.1",
    "less-loader": "^2.2.2",
    "node-libs-browser": "^1.0.0",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "electron-prebuilt": "^0.37.2",
    "react": "^0.14.7",
    "react-dom": "^0.14.3",
    "nconf": "^0.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PolarisChen/Piece"
  },
  "build": {
    "app-bundle-id": "com.PolarisChen.PieceForMac",
    "app-category-type": "public.app-category.productivity",
    "win": {
      "iconUrl": ""
    }
  }
}
